<h1>Edit Species</h1>

<% if @species.errors.any? %>
  <h3>Please fix any errors:</h3>
  <ul>
    <% @species.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>


<form action="/species/<%= @species.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="species_name">Name</label>
  <input id="species_name" name="species[name]" type="text" value="<%= @species.name %>">
  <button>Update Species</button>
</form>

